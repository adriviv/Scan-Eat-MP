.header {
  height: 25px;
  background-color: #EA7B4C;
  padding: 16px;
  color: white;
  font-weight: bold;
  border-bottom: 3px solid white;
}


.card-product {
 overflow: hidden;
 height: 120px;
 background: white;
 box-shadow: 0 0 15px rgba(0,0,0,0.2);
 display: flex;
 align-items: center;
 margin: 10px;
}

.h2 {
 font-size: 16px;
 font-weight: bold;
 margin: 0;
}

.p {
 font-size: 12px;
 line-height: 1.4;
 opacity: .7;
 margin-bottom: 0;
 margin-top: 8px;
}

.card-product-infos {
 padding: 16px;
}

.smiley {
  position: relative;
  top: 0px;
  left: 30px;
}

