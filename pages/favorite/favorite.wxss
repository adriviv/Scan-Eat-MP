/* Top Header  */
.banner {
  color: white;
  text-align: center;
  height: 15vh;
  /* if you have a 70px navbar => height: calc(100vh - 70px); */
  background-size: cover !important;
  display: flex;
  align-items: center;
  justify-content: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: left;
}
.userinfo-nickname {
  color: white;
  font-weight: bold;
}
.welcome {
  font-size: 15px;
}
.divider {
  height: 45rpx;
  padding: 10rpx 10rpx 20rpx 10rpx;
  background-color: #EA7B4C;
  color: white;
  font-weight: bold;
  margin-top: 5rpx; 

}
.header {
position: relative; 
  top: 50%;
  height: 25px;
  background-color: #EA7B4C;
  padding: 14px;
  color: white;
  font-weight: bold;
  font-size: 24px;
  padding-left: 5px;
  
}

.progress_nutrition {
  width: 90%;
  position: relative;
  right: 10px;
}

/* finish Top Header */


/* Dual card */

.card-dual {
  display:flex;
}

.card-product {
  overflow: hidden;
  width: 400rpx;
  height: 430rpx;
  background: white;
  box-shadow: 0 0 30rpx rgba(0,0,0,0.2);
  padding: 20rpx;
  margin: 20rpx;
}

.image {
  margin: 30rpx;
  text-align: center;
}

.product-img {
  width: 200rpx;
  height: 200rpx;
}

.h2 {

  font-size: 30rpx;
  font-weight: bold;

}

.p {

  font-size: 25rpx;
  opacity: .7;
  margin-bottom: 0;
  margin-top: 15rpx;
}

.card-product-infos {
  margin-left: 30rpx;
}

.classification {
  

  font-size: 25rpx;
  opacity: .7;
}

.dot {

  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

